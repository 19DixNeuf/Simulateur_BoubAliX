<Window x:Class="Simulateur.FenetreIdentification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Identification" Height="266" Width="235">
    <Grid>
        <GroupBox Header="Identifiant" HorizontalAlignment="Left" Height="60" Margin="15,36,0,0" VerticalAlignment="Top" Width="182">
            <TextBox x:Name="tbIdentifiant" HorizontalAlignment="Left" Height="30" Margin="10,5,0,-12" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="156" />
        </GroupBox>
        <GroupBox Header="Mot de passe" HorizontalAlignment="Left" Height="60" Margin="15,105,0,0" VerticalAlignment="Top" Width="182">
            <PasswordBox x:Name="tbMotDePasse" HorizontalAlignment="Left" Height="25" Margin="9,9,0,0" VerticalAlignment="Top" Width="157"/>
        </GroupBox>
        <Button Content="Valider" HorizontalAlignment="Left" Height="25" Margin="15,186,0,0" VerticalAlignment="Top" Width="85" Click="btValiderClick"/>
        <Label x:Name="msgErreur" Content="" HorizontalAlignment="Left" Height="25" Margin="15,8,0,0" VerticalAlignment="Top" Width="182" FontWeight="Bold" Background="{x:Null}" Foreground="#FFC11B1B"/>
        <Button Content="Annuler" HorizontalAlignment="Left" Height="25" Margin="116,186,0,0" VerticalAlignment="Top" Width="81" Click="btAnnulerClick"/>
    </Grid>
</Window>
